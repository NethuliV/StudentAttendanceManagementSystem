<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sams.controller.ManageCoursesController" spacing="10" prefWidth="800" prefHeight="600">
    <Label text="Manage Courses" style="-fx-font-size: 18px;" />
    
    <!-- Table for listing courses -->
    <TableView fx:id="coursesTable">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="200" />
            <TableColumn fx:id="subjectColumn" text="Subject" prefWidth="200" />
        </columns>
    </TableView>
    
    <!-- Form for add/update -->
    <GridPane hgap="10" vgap="10">
        <Label text="Course Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="courseNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        
        <Label text="Subject:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="subjectField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    </GridPane>
    
    <HBox spacing="10">
        <Button text="Add Course" onAction="#addCourse" />
        <Button text="Update Course" onAction="#updateCourse" />
        <Button text="Delete Course" onAction="#deleteCourse" />
        <Button text="Clear Form" onAction="#clearForm" />
    </HBox>
</VBox>